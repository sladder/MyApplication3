<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/list_selector_2"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:id="@+id/list_row_detalles_carrito">>

    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="false"

        android:orientation="horizontal"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="#78c9cfcf"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/list_row_id3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <ImageView
            android:id="@+id/list_row_image3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_lanzador"
            android:adjustViewBounds="false"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/frame"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_titulo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arroz"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/thumbnail"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginTop="8dp"
                android:layout_gravity="top|left"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad: 2"
                android:id="@+id/tv_cantidad3"
                android:textColor="#040404"
                android:layout_marginTop="2dp"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prec. Uni: S/. 14.50"
                android:id="@+id/tv_precio_uni3"
                android:layout_gravity="left"
                android:textColor="#040404"
                android:layout_marginTop="2dp"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prec. Total: S/. 29.00"
                android:id="@+id/tv_precio_total3"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="10dp"
                android:textColor="#040404"
                android:textSize="16dp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>